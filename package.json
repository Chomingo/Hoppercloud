{
  "name": "hopper-launcher",
  "productName": "Hopper Launcher",
  "version": "1.1.1",
  "description": "Hopper Launcher",
  "author": "Josmir",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "promote": "node promote_stable.js",
    "test": "jest",
    "lint": "eslint ."
  },
  "build": {
    "appId": "com.ombicraft.launcher",
    "publish": [
      {
        "provider": "github",
        "owner": "Antaneyes",
        "repo": "minecraft-launcher-custom"
      }
    ],
    "win": {
      "target": "nsis",
      "artifactName": "hoppersetup-${version}.${ext}",
      "icon": "assets/icon.png"
    },
    "files": [
      "ui/**/*",
      "utils/**/*",
      "assets/**/*",
      "index.js",
      "package.json"
    ]
  },
  "license": "ISC",
  "main": "index.js",
  "type": "commonjs",
  "dependencies": {
    "adm-zip": "^0.5.16",
    "axios": "^1.13.2",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "es-object-atoms": "^1.1.1",
    "fs-extra": "^11.3.2",
    "minecraft-launcher-core": "^3.18.2",
    "msmc": "^5.0.5"
  },
  "devDependencies": {
    "electron": "^39.2.3",
    "electron-builder": "^26.0.12",
    "eslint": "^8.57.1",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.6.0",
    "jest": "^30.2.0"
  }
}